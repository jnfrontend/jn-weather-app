---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
	<div class="container-fluid h-60vh d-flex align-items-center" data-anim="fadeout">
		<div class="row align-items-start">
		  <div class="col">
			<div id="headline">
				<h1 class="display-1 fw-bolder">Welcome to my web application</h1>
				<p class="fs-4 fw-normal mt-4"><em>Get real-time weather updates for location of your choice with this astro app.</em></p>
			</div>
			<div class="cta_container mt-4">
				<a href="" class="btn btn-dark px-5 py-3 fs-5 mt-5 fw-medium d-flex"><span class="btn-text">Get started</span><span class="arrow-icon"></span></a>
			</div>
		  </div>
		</div>
	  </div>
</BaseLayout>

